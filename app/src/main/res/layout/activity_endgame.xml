<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_ButtonsGame"
    android:background="@drawable/ic_background"
    android:orientation="vertical">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/endGame_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Score Board:"
        />
    <FrameLayout
        android:id="@+id/endGame_FRM_Board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FFCC80"
        android:layout_marginTop="5dp"
        />
    <FrameLayout
        android:id="@+id/endGame_FRM_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#FFCC80"
        android:layout_marginTop="20dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/endGame_BTN_playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textSize="20dp"
            android:text="Play again"

            android:backgroundTint="@color/design_default_color_error"

            />
        <Button
            android:id="@+id/endGame_BTN_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="finish"
            android:backgroundTint="@color/design_default_color_error"
            />

    </LinearLayout>





</LinearLayout>
