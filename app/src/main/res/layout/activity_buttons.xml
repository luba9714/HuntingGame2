<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_ButtonsGame"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            />
        <ImageView
            android:id="@+id/main_IMG_heart2"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"/>
        <ImageView
            android:id="@+id/main_IMG_heart3"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_LBL_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="right|center"/>

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"

            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/main_IMG_11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />
            <View style="@style/VerticalDivider"/>
            <ImageView
                android:id="@+id/main_IMG_12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <View style="@style/VerticalDivider"/>
            <ImageView
                android:id="@+id/main_IMG_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>

    <View style="@style/HorizontalDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_IMG_21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_harry"/>


        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_IMG_31"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_snitch"
            />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_32"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_33"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_IMG_41"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

           />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_42"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_43"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_voldemort"/>

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"

        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/main_IMG_51"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_52"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"


            />
        <View style="@style/VerticalDivider"/>
        <ImageView
            android:id="@+id/main_IMG_53"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

    </LinearLayout>
    <View style="@style/HorizontalDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:layout_weight="20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton

                android:id="@+id/main_IMG_up"

                android:background="@drawable/ic_up"
                android:layout_width="70dp"
                android:layout_height="56dp"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/main_IMG_left"
                android:layout_width="70dp"
                android:background="@drawable/ic_left"
                android:layout_height="56dp"
                 />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_square" />
            <ImageButton
                android:id="@+id/main_IMG_right"
                android:layout_width="70dp"
                android:clickable="true"
                android:layout_height="56dp"

                android:background="@drawable/ic_right" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">


            <ImageButton
                android:id="@+id/main_IMG_down"
                android:layout_width="70dp"
                android:clickable="true"
                android:layout_height="56dp"
                android:background="@drawable/ic_down" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
